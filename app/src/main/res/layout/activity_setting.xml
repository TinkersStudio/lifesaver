<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="app.dqtrinh.lifesaver.Setting"
    android:background="@drawable/help">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/messageField"
        android:layout_marginBottom="39dp"
        android:text="HELP NOW! I am stuck in traffic, and I feel like my heart is throbbing really hard. Please send for help, I am getting worried."
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/nameField"
        android:layout_marginTop="41dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/messageField"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name :"
        android:id="@+id/nameText"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:layout_alignTop="@+id/nameField"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/phoneNumber"
        android:layout_marginTop="40dp"
        android:textColor="#ffffff"
        android:text="(123)456-7890"
        android:textIsSelectable="false"
        android:textSize="20sp"
        android:layout_below="@+id/nameField"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Message:"
        android:id="@+id/messageText"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textIsSelectable="false"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/messageField" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact: "
        android:id="@+id/textView"
        android:textColor="#ffffff"
        android:textSize="28sp"
        android:layout_alignTop="@+id/phoneNumber"
        android:layout_toStartOf="@+id/phoneNumber" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/fbicon"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/nameField"
        android:layout_alignEnd="@+id/nameText"
        android:layout_alignTop="@+id/nameText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:text="https://www.facebook.com/name.lastname.1"
        android:textColor="#ffffff"
        android:layout_above="@+id/messageText"
        android:layout_alignStart="@+id/phoneNumber"
        android:layout_marginBottom="28dp" />
</RelativeLayout>
